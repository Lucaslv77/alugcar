---
import carro from "../data/carro.json";
---


{carro.map((carro) => (
    <div class="carro">
        <div class="imagem">
            <img src={carro.imagen} alt={carro.modelo} />
        </div>

        <div class="informacoes">
            <h2>{carro.modelo}</h2>
            <span class="tipo">{carro.tamanho}</span>

            <div class="detalhes">
                <div class="detalhe">
                    <img src="/public/images/icone-transmissao.svg" alt="Transmission" class="icone" />
                    <p>{carro.canbio}</p>
                </div>
                <div class="detalhe">
                    <img src="/public/images/icone-malas.svg" alt="Bag" class="icone" />
                    <p>{carro.mala}</p>
                </div>
            </div>
        </div>

        <div class="valores">
            <div class="valor-diario">
                <h3>{carro.diaria}</h3>
                <p>Valor Di√°rio</p>
            </div>

            <div class="dias">
                <h3>01</h3>
                <p>dia(s)</p>
            </div>

            <div class="valor-total">
                <h3>{carro.total}</h3>
                <p>Valor Total</p>
        <div class="reservar">
            <button>Reservar</button>
        </div>
            </div>
        </div>

    </div>
))}

<style>
    .carro {
        margin: 20px;
        background-color: #FFFFFF;
        border-radius: 8px; 
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        padding: 15px; 
        gap: 15px; 
        max-width: 800px; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .imagem img {
        max-width: 180px; 
        height: auto;
        
    }

    .informacoes {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .informacoes h2 {
        margin: 0;
        font-weight: bold;
        font-size: 30px;
    }

    .informacoes .tipo {
        display: block;
        color: gray;
        font-size: 14px;
        margin-left: 6px;
    }

    .detalhes {
        display: flex;
        gap: 20px; 
        margin-top: 40px;
        font-weight: bold;
    }

    .detalhe {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .icone {
        vertical-align: middle; 
    }

    .valores {
        display: flex;
        gap: 40px; 

    }

    .valor-diario, .dias, .valor-total {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .valor-total {
        margin-left: -30px;
    }

    .valor-diario h3, .dias h3, .valor-total h3 {
        margin: 0;
        font-size: 20px;
    }

    .valores p {
        margin-top: 0;
        color: gray ;
    }


    .reservar {
        margin-top: 20px;
        align-self: flex-start;
    }

    .carro button {
        margin-top: 30px;
        font-size: 15px;
        font-weight: bold;
        width: 140px;
        height: 38px;
        background-color: rgb(255, 145, 0);
        border-radius: 4px;
        color: black;
        border: none;
        cursor: pointer;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
</style>